<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ToolBar去除阴影-->
    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
    </style>

    <style name="Splash_Style" parent="AppTheme">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@mipmap/splash_bg_img</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ActivityColorTranslucentTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <!--此种方式下面的虚拟按钮也会影响-->
        <!--<item name="android:windowTranslucentStatus">false</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="LoginActivityColorTranslucentTheme" parent="ActivityColorTranslucentTheme">
        <item name="colorPrimary">@color/light_yellow</item>
        <item name="colorPrimaryDark">@color/light_yellow</item>
        <item name="android:windowBackground">@color/light_yellow</item>
    </style>
</resources>