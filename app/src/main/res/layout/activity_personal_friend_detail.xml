    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="252dp"
                    android:background="@mipmap/personal_friend_info_bg"
                    app:layout_collapseMode="parallax">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_scrollFlags="scroll|enterAlways">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_vertical_margin">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_avater"
                                android:layout_width="@dimen/user_detail_avater_width"
                                android:layout_height="@dimen/user_detail_avater_width"
                                android:layout_centerHorizontal="true"
                                android:src="@mipmap/ic_holder_light" />

                            <ImageView
                                android:id="@+id/user_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:layout_marginBottom="6dp"
                                android:layout_marginRight="6dp" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/user_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:ellipsize="marquee"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:id="@+id/user_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_x_small" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/user_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:focusableInTouchMode="true"
                                android:gravity="center"
                                android:padding="3dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/white"
                                android:textIsSelectable="true"
                                android:textSize="@dimen/font_x_small" />

                            <TextView
                                android:id="@+id/user_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:ellipsize="marquee"
                                android:focusableInTouchMode="true"
                                android:gravity="center"
                                android:padding="3dp"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/white"
                                android:textIsSelectable="true"
                                android:textSize="@dimen/font_x_small" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/personal_coins_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_horizontal_padding">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/change_money_times"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/font_orange"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/change_money_times"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:text="@string/detail_change_money_times"
                            android:textColor="@color/font_grey"
                            android:textSize="@dimen/font_x_small" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/coin_counts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/font_orange"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/coin_counts"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:text="@string/detail_coin_counts"
                            android:textColor="@color/font_grey"
                            android:textSize="@dimen/font_x_small" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/get_from_friend_counts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/font_orange"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_medium" />

                        <TextView
                            android:id="@+id/change_money_time_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/get_from_friend_counts"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:text="@string/detail_get_from_friend_counts"
                            android:textColor="@color/font_grey"
                            android:textSize="@dimen/font_x_small" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@android:color/white"
                    android:padding="@dimen/activity_horizontal_padding">

                    <ImageView
                        android:id="@+id/personal_galley_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/personal_galley_icon" />

                    <TextView
                        android:id="@+id/personal_galley_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/personal_galley_icon"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_toRightOf="@id/personal_galley_icon"
                        android:text="@string/detail_personal_album"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_medium" />

                    <LinearLayout
                        android:id="@+id/galley_preview_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/personal_galley_title"
                        android:layout_below="@id/personal_galley_title"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:orientation="horizontal">

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/im_ope_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/user_detail_buttons_margin_top"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/user_detail_buttons_padding"
                    android:paddingRight="@dimen/user_detail_buttons_padding">

                    <Button
                        android:id="@+id/add_friend"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/user_detail_button_height"
                        android:background="@drawable/personal_details_button_white"
                        android:text="@string/detail_add_friend"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_large" />

                    <Button
                        android:id="@+id/msg_chat"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/user_detail_button_height"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@drawable/personal_details_button_red"
                        android:text="@string/detail_send_msg"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_large" />

                    <Button
                        android:id="@+id/video_chat"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/user_detail_button_height"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@drawable/personal_details_button_white"
                        android:text="@string/detail_send_video"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/font_large"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00f7f5ef">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_padding"
                    android:paddingRight="@dimen/activity_horizontal_padding">

                    <FrameLayout
                        android:id="@+id/title_left_operation_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/activity_horizontal_padding">

                        <ImageView
                            android:id="@+id/title_left_operation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:src="@mipmap/left_arrow_white" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/title_right_operation_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/activity_horizontal_padding">

                        <ImageView
                            android:id="@+id/title_right_operation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:src="@mipmap/menu_icon_white" />

                    </FrameLayout>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>