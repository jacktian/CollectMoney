<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_collapseMode="parallax"
                android:background="@color/colorPrimary"
                android:layout_height="148dp">

                <ImageView
                    android:id="@+id/main.backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/toolbar_image_bg"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@mipmap/user_avater"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/user_detail_avater_width"
                    android:layout_alignParentBottom="true"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:layout_height="@dimen/user_detail_avater_width" />
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_padding"
                    android:paddingRight="@dimen/activity_horizontal_padding">

                    <FrameLayout
                        android:id="@+id/title_left_operation_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/activity_horizontal_padding">

                        <ImageView
                            android:id="@+id/title_left_operation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:src="@mipmap/left_arrow_white" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/title_right_operation_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/activity_horizontal_padding">

                        <ImageView
                            android:id="@+id/title_right_operation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:src="@mipmap/menu_icon_white" />

                    </FrameLayout>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

     <LinearLayout
         android:layout_width="match_parent"
         android:background="@color/colorPrimary"
         android:orientation="vertical"
         android:layout_height="wrap_content">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/user_name"
                 android:layout_width="wrap_content"
                 android:textColor="@color/grey"
                 android:textSize="@dimen/font_large"
                 android:paddingTop="@dimen/activity_horizontal_padding"
                 android:text="韩梅梅"
                 android:layout_centerHorizontal="true"
                 android:gravity="center"
                 android:layout_height="wrap_content" />

             <TextView
                 android:id="@+id/user_address"
                 android:layout_width="wrap_content"
                 android:layout_below="@id/user_name"
                 android:textColor="@color/orange"
                 android:textSize="@dimen/font_medium"
                 android:paddingTop="@dimen/activity_horizontal_padding"
                 android:text="江苏\t\t常州"
                 android:layout_centerHorizontal="true"
                 android:gravity="center"
                 android:layout_height="wrap_content" />

             <LinearLayout
                 android:orientation="horizontal"
                 android:id="@+id/user_level"
                 android:layout_width="wrap_content"
                 android:layout_below="@id/user_address"
                 android:paddingTop="@dimen/activity_horizontal_padding"
                 android:layout_centerHorizontal="true"
                 android:gravity="center"
                 android:layout_height="wrap_content" >
                 <ImageView
                     android:layout_width="wrap_content"
                     android:src="@mipmap/diamond_pink"
                     android:layout_height="wrap_content" />
                 <ImageView
                     android:layout_width="wrap_content"
                     android:src="@mipmap/diamond_pink"
                     android:layout_height="wrap_content" />
                 <ImageView
                     android:layout_width="wrap_content"
                     android:src="@mipmap/diamond_pink"
                     android:layout_height="wrap_content" />
             </LinearLayout>
         </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_marginTop="@dimen/personal_item_panel_margin_top"
             android:background="@drawable/personal_item_panel_bg"
             android:paddingBottom="@dimen/activity_vertical_padding"
             android:paddingTop="@dimen/activity_vertical_padding"
             android:paddingLeft="@dimen/user_detail_item_layout_padding"
             android:paddingRight="@dimen/user_detail_item_layout_padding"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/user_account_title"
                 android:textColor="@color/grey"
                 android:textSize="@dimen/font_medium"
                 android:text="@string/detail_user_name"
                 android:layout_centerVertical="true"
                 android:layout_alignParentLeft="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

             <ImageView
                 android:id="@+id/user_qr_code"
                 android:src="@mipmap/qr_code_icon"
                 android:layout_width="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_height="wrap_content" />

             <TextView
                 android:id="@+id/user_account"
                 android:textColor="@color/grey"
                 android:textSize="@dimen/font_medium"
                 android:text="387654926"
                 android:layout_centerVertical="true"
                 android:singleLine="true"
                 android:layout_toRightOf="@id/user_account_title"
                 android:layout_toLeftOf="@id/user_qr_code"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
         </RelativeLayout>

         <LinearLayout
             android:orientation="vertical"
             android:layout_marginTop="@dimen/personal_item_panel_margin_top"
             android:background="@drawable/personal_item_panel_bg"
             android:paddingBottom="@dimen/activity_vertical_padding"
             android:paddingTop="@dimen/activity_vertical_padding"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:orientation="horizontal"
                 android:paddingLeft="@dimen/user_detail_item_layout_padding"
                 android:paddingRight="@dimen/user_detail_item_layout_padding"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <RelativeLayout
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content">
                     <TextView
                         android:id="@+id/change_money_times"
                         android:textColor="@color/orange"
                         android:textSize="@dimen/font_xlarge"
                         android:text="40"
                         android:layout_marginLeft="@dimen/user_detail_wealth_detail_margin"
                         android:singleLine="true"
                         android:ellipsize="marquee"
                         android:textIsSelectable="true"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:textColor="@color/grey"
                         android:textSize="@dimen/font_medium"
                         android:text="@string/detail_change_money_times"
                         android:layout_below="@id/change_money_times"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />

                 </RelativeLayout>

                 <RelativeLayout
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content">
                     <TextView
                         android:id="@+id/coin_counts"
                         android:textColor="@color/orange"
                         android:textSize="@dimen/font_xlarge"
                         android:text="2200"
                         android:layout_centerHorizontal="true"
                         android:singleLine="true"
                         android:ellipsize="marquee"
                         android:textIsSelectable="true"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:textColor="@color/grey"
                         android:textSize="@dimen/font_medium"
                         android:text="@string/detail_coin_counts"
                         android:layout_centerHorizontal="true"
                         android:layout_below="@id/coin_counts"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />

                 </RelativeLayout>

                 <RelativeLayout
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content">
                     <TextView
                         android:id="@+id/get_from_friend_counts"
                         android:textColor="@color/orange"
                         android:textSize="@dimen/font_xlarge"
                         android:text="25"
                         android:singleLine="true"
                         android:ellipsize="marquee"
                         android:layout_marginRight="@dimen/user_detail_wealth_detail_margin"
                         android:textIsSelectable="true"
                         android:layout_alignParentRight="true"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:id="@+id/change_money_time_title"
                         android:textColor="@color/grey"
                         android:textSize="@dimen/font_medium"
                         android:text="@string/detail_get_from_friend_counts"
                         android:layout_below="@id/get_from_friend_counts"
                         android:layout_alignParentRight="true"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                 </RelativeLayout>
             </LinearLayout>

             <View
                 android:layout_marginTop="@dimen/activity_vertical_padding"
                 android:layout_width="match_parent"
                 android:layout_height="0.6dp"
                 android:background="@color/light_grey"/>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:minHeight="49dp"
                 android:paddingTop="@dimen/activity_vertical_padding"
                 android:paddingLeft="@dimen/user_detail_item_layout_padding"
                 android:paddingRight="@dimen/user_detail_item_layout_padding"
                 android:layout_height="wrap_content">
                 <RelativeLayout
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                     android:layout_height="wrap_content">
                     <TextView
                         android:textColor="@color/grey"
                         android:textSize="@dimen/font_medium"
                         android:layout_width="wrap_content"
                         android:text="@string/detail_personal_album"
                         android:layout_height="wrap_content" />
                 </RelativeLayout>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="0dp"
                     android:layout_weight="2"
                     android:layout_height="wrap_content">
                     <ImageView
                         android:src="@mipmap/album_pic"
                         android:layout_width="49dp"
                         android:scaleType="centerInside"
                         android:layout_height="49dp" />
                     <ImageView
                         android:src="@mipmap/album_pic"
                         android:layout_width="49dp"
                         android:scaleType="centerInside"
                         android:layout_height="49dp" />
                     <ImageView
                         android:src="@mipmap/album_pic"
                         android:layout_width="49dp"
                         android:scaleType="centerInside"
                         android:layout_height="49dp" />
                     <ImageView
                         android:src="@mipmap/album_pic"
                         android:layout_width="49dp"
                         android:scaleType="centerInside"
                         android:layout_height="49dp" />
                 </LinearLayout>
             </LinearLayout>
         </LinearLayout>
         <TextView
             android:id="@+id/more_info"
             android:layout_width="wrap_content"
             android:textColor="@color/grey"
             android:layout_marginTop="@dimen/personal_item_panel_margin_top"
             android:text="@string/detail_more_info"
             android:layout_gravity="center_horizontal"
             android:textSize="@dimen/font_medium"
             android:layout_height="wrap_content" />

         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_marginTop="@dimen/user_detail_chat_margin_top"
             android:layout_gravity="center_horizontal"
             android:layout_height="wrap_content">
             <Button
                 android:id="@+id/send_msg"
                 android:layout_width="wrap_content"
                 android:background="@drawable/personal_details_button_bg"
                 android:textColor="@color/grey"
                 android:text="@string/detail_send_msg"
                 android:layout_marginRight="@dimen/activity_horizontal_margin"
                 android:textSize="@dimen/font_large"
                 android:layout_height="@dimen/button_height" />
             <Button
                 android:id="@+id/send_video"
                 android:layout_width="wrap_content"
                 android:layout_toRightOf="@id/send_msg"
                 android:background="@drawable/personal_details_button_bg"
                 android:textColor="@color/grey"
                 android:text="@string/detail_send_video"
                 android:layout_marginLeft="@dimen/activity_horizontal_margin"
                 android:textSize="@dimen/font_large"
                 android:layout_height="@dimen/button_height" />
         </RelativeLayout>
     </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>