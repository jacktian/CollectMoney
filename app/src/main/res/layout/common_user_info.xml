<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_user_info_item_margin_top"
    android:paddingTop="@dimen/common_user_info_item_margin_top">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/app_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_user_info_item_height"
        android:layout_marginTop="@dimen/common_user_info_layout_margin_top"
        android:background="@drawable/common_user_info_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_user_info_item_padding"
        android:paddingTop="@dimen/common_user_info_item_padding">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@mipmap/phone_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@null"
                android:hint="@string/input_phone_num"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/font_grey"
                android:textColorHint="@color/font_grey"
                android:textSize="@dimen/font_medium" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_count_down_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_user_info_item_height"
        android:layout_marginTop="@dimen/common_user_info_item_margin_top"
        android:background="@drawable/common_user_info_item_bg"
        android:paddingBottom="@dimen/common_user_info_item_padding"
        android:paddingTop="@dimen/common_user_info_item_padding">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@mipmap/verify_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/get_verify_button"
                android:layout_width="@dimen/common_user_info_verify_button_width"
                android:layout_height="@dimen/common_user_info_verify_button_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/get_verify_code_button_bg"
                android:gravity="center"
                android:text="@string/get_verify_code"
                android:textColor="@color/font_grey"
                android:textSize="@dimen/font_small" />

            <EditText
                android:id="@+id/user_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@id/get_verify_button"
                android:background="@null"
                android:hint="@string/input_verify_code"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/font_grey"
                android:textColorHint="@color/font_grey"
                android:textSize="@dimen/font_medium" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_pwd_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_user_info_item_height"
        android:layout_marginTop="@dimen/common_user_info_item_margin_top"
        android:background="@drawable/common_user_info_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_user_info_item_padding"
        android:paddingTop="@dimen/common_user_info_item_padding">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@mipmap/password_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <EditText
                android:id="@+id/user_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@null"
                android:hint="@string/input_pwd"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/font_grey"
                android:textColorHint="@color/font_grey"
                android:textSize="@dimen/font_medium" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_confirm_pwd_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_user_info_item_height"
        android:layout_marginTop="@dimen/common_user_info_item_margin_top"
        android:background="@drawable/common_user_info_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_user_info_item_padding"
        android:paddingTop="@dimen/common_user_info_item_padding">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@mipmap/password_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <EditText
                android:id="@+id/user_confirm_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@null"
                android:hint="@string/input_confirm_pwd"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/font_grey"
                android:textColorHint="@color/font_grey"
                android:textSize="@dimen/font_medium" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_user_info_item_height"
        android:layout_marginTop="@dimen/common_user_info_item_margin_top"
        android:background="@drawable/common_user_info_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_user_info_item_padding"
        android:paddingTop="@dimen/common_user_info_item_padding">

        <ImageView
            android:id="@+id/user_nickname_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/lock_icon" />

        <EditText
            android:id="@+id/user_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/user_nickname_icon"
            android:background="@null"
            android:hint="@string/input_nickname"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/user_gender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_user_info_item_margin_top"
        android:background="@drawable/common_user_info_item_bg"
        android:paddingBottom="@dimen/common_user_info_item_padding"
        android:paddingTop="@dimen/common_user_info_item_padding">

        <ImageView
            android:id="@+id/user_gender_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/lock_icon" />

        <com.yzdsmart.Collectmoney.views.BetterSpinner
            android:id="@+id/user_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/user_gender_icon"
            android:background="@null"
            android:gravity="left|center"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_age_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_user_info_item_margin_top"
        android:background="@drawable/common_user_info_item_bg"
        android:paddingBottom="@dimen/common_user_info_item_padding"
        android:paddingTop="@dimen/common_user_info_item_padding">

        <ImageView
            android:id="@+id/user_age_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/lock_icon" />

        <EditText
            android:id="@+id/user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/user_age_icon"
            android:background="@null"
            android:focusable="false"
            android:hint="@string/input_age"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/font_medium" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_user_info_item_margin_top"
        android:paddingBottom="@dimen/common_user_info_item_padding"
        android:paddingTop="@dimen/common_user_info_item_padding">

        <TextView
            android:id="@+id/forget_pwd_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/common_text_view_padding"
            android:paddingRight="@dimen/common_text_view_padding"
            android:paddingTop="@dimen/common_text_view_padding"
            android:src="@mipmap/lock_icon"
            android:text="@string/forget_pwd"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_medium" />

        <Button
            android:id="@+id/login_register_confirm_button"
            style="@style/orange_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_centerInParent="true"
            android:text="@string/login" />

        <TextView
            android:id="@+id/new_user_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/common_text_view_padding"
            android:paddingRight="@dimen/common_text_view_padding"
            android:paddingTop="@dimen/common_text_view_padding"
            android:text="@string/new_user"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_medium" />
    </RelativeLayout>
</LinearLayout>