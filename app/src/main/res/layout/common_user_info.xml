<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/app_logo_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_logo_layout_height"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_logo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_logo_layout"
        android:orientation="vertical">

        <View
            android:id="@+id/common_user_info_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_user_info_layout_padding" />

        <LinearLayout
            android:id="@+id/register_login_name_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_user_info_item_height"
            android:layout_marginTop="@dimen/common_user_info_item_margin_top"
            android:background="@drawable/common_user_info_item_bg"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_user_info_item_padding"
            android:paddingTop="@dimen/common_user_info_item_padding">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/register_login_phone_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/register_login_phone_icon" />

                <TextView
                    android:id="@+id/register_login_area_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/register_login_right_grey_border"
                    android:gravity="center"
                    android:text="+86"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="4">

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/input_phone_num"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingRight="@dimen/common_user_info_item_padding"
                    android:singleLine="true"
                    android:textColor="@color/font_grey"
                    android:textColorHint="@color/font_grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_count_down_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_user_info_item_height"
            android:layout_marginTop="@dimen/common_user_info_item_margin_top"
            android:background="@drawable/common_user_info_item_bg"
            android:paddingBottom="@dimen/common_user_info_item_padding"
            android:paddingTop="@dimen/common_user_info_item_padding">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/register_login_verify_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/get_verify_button"
                    android:layout_width="@dimen/common_user_info_verify_button_width"
                    android:layout_height="@dimen/common_user_info_verify_button_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/get_verify_code_button_bg"
                    android:gravity="center"
                    android:text="@string/get_verify_code"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/font_small" />

                <EditText
                    android:id="@+id/user_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_toLeftOf="@id/get_verify_button"
                    android:background="@null"
                    android:hint="@string/input_verify_code"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/font_grey"
                    android:textColorHint="@color/font_grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_pwd_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_user_info_item_height"
            android:layout_marginTop="@dimen/common_user_info_item_margin_top"
            android:background="@drawable/common_user_info_item_bg"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_user_info_item_padding"
            android:paddingTop="@dimen/common_user_info_item_padding">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/register_login_password_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="4">

                <EditText
                    android:id="@+id/user_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/input_pwd"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingRight="@dimen/common_user_info_item_padding"
                    android:singleLine="true"
                    android:textColor="@color/font_grey"
                    android:textColorHint="@color/font_grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_confirm_pwd_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_user_info_item_height"
            android:layout_marginTop="@dimen/common_user_info_item_margin_top"
            android:background="@drawable/common_user_info_item_bg"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_user_info_item_padding"
            android:paddingTop="@dimen/common_user_info_item_padding">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/register_login_password_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="4">

                <EditText
                    android:id="@+id/user_confirm_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/input_confirm_pwd"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingRight="@dimen/common_user_info_item_padding"
                    android:singleLine="true"
                    android:textColor="@color/font_grey"
                    android:textColorHint="@color/font_grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_user_info_item_height"
            android:layout_marginTop="@dimen/common_user_info_item_margin_top"
            android:background="@drawable/common_user_info_item_bg"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_user_info_item_padding"
            android:paddingTop="@dimen/common_user_info_item_padding">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="9">

                <EditText
                    android:id="@+id/user_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/input_nickname"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:paddingRight="@dimen/common_user_info_item_padding"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_gender_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_user_info_item_height"
            android:layout_marginTop="@dimen/common_user_info_item_margin_top"
            android:background="@drawable/common_user_info_item_bg"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_user_info_item_padding"
            android:paddingTop="@dimen/common_user_info_item_padding">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="3"
                android:text="@string/select_gender"
                android:textColor="@color/font_grey"
                android:textSize="@dimen/font_medium" />

            <com.yzdsmart.Dingdingwen.views.CustomNestRadioGroup
                android:id="@+id/gender_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="6"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/gender_male"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:button="@drawable/register_login_gender_radio"
                    android:checked="true"
                    android:gravity="right|center_vertical"
                    android:text="@string/gender_male"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_medium" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/gender_female"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:button="@drawable/register_login_gender_radio"
                    android:gravity="right|center_vertical"
                    android:text="@string/gender_female"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_medium" />
            </com.yzdsmart.Dingdingwen.views.CustomNestRadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_age_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_user_info_item_height"
            android:layout_marginTop="@dimen/common_user_info_item_margin_top"
            android:background="@drawable/common_user_info_item_bg"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_user_info_item_padding"
            android:paddingTop="@dimen/common_user_info_item_padding">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/user_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="8"
                android:background="@null"
                android:focusable="false"
                android:hint="@string/input_age"
                android:paddingRight="@dimen/common_user_info_item_padding"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/font_medium" />

            <RelativeLayout
                android:id="@+id/register_calendar_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/register_login_calendar_icon" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/login_register_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_user_info_item_height"
            android:layout_marginTop="@dimen/common_user_info_register_login_button_margin_top"
            android:background="@drawable/register_login_button"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:id="@+id/forget_new_user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_user_info_item_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/forget_pwd_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_login_right_grey_border"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:text="@string/forget_pwd"
                android:textColor="@color/font_grey"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/new_user_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:text="@string/new_user"
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_agreement_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_user_info_item_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/register_agreement_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/register_login_agreement_check"
                android:checked="true"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:text="@string/register_agreement_check"
                android:textColor="@color/font_grey"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/register_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_agreement_name"
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_small" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>