<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/buy_coin_pay_type_layout"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="5dp"
    android:layout_marginTop="120dp"
    android:background="@mipmap/buy_coins_pay_floating_layer"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingTop="@dimen/activity_vertical_padding">

    <com.yzdsmart.Collectmoney.views.CustomNestRadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingTop="@dimen/activity_vertical_padding"
            android:text="@string/buy_coin_pay_type"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/light_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:paddingTop="@dimen/activity_vertical_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/wechat_pay_icon"
                android:drawablePadding="@dimen/activity_horizontal_padding"
                android:text="@string/buy_coin_pay_wechat"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />

            <RadioButton
                android:id="@+id/wechat_pay_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/pay_type_radio" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/light_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:paddingTop="@dimen/activity_vertical_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/union_pay_icon"
                android:drawablePadding="@dimen/activity_horizontal_padding"
                android:text="@string/buy_coin_pay_union"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />

            <RadioButton
                android:id="@+id/union_pay_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:drawableLeft="@drawable/pay_type_radio" />
        </RelativeLayout>
    </com.yzdsmart.Collectmoney.views.CustomNestRadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/light_grey" />

    <TextView
        android:id="@+id/pay_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:drawableLeft="@mipmap/rmb_icon"
        android:gravity="center"
        android:text=""
        android:textColor="@color/orange"
        android:textSize="@dimen/font_x_large"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pay_btn"
        style="@style/orange_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="确定"
        android:textSize="@dimen/font_medium" />
</LinearLayout>
