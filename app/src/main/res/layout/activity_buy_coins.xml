<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_toolbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_toolbar_height"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/publish_tasks_item_title_padding_top_bottom"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:paddingTop="@dimen/publish_tasks_item_title_padding_top_bottom"
            android:text="请选择金币类型"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_xx_small" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/coin_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"></Spinner>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@mipmap/down_arrow" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/personal_item_panel_margin_top"
            android:background="@drawable/white_panel_top_bottom_border"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买金币"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/buy_coin_rmb_icon" />

                <EditText
                    android:id="@+id/coin_counts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@drawable/white_panel_bottom_border"
                    android:hint="@string/buy_coin_hint"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/common_text_view_padding"
                    android:paddingLeft="@dimen/activity_horizontal_padding"
                    android:paddingRight="@dimen/activity_horizontal_padding"
                    android:paddingTop="@dimen/common_text_view_padding"
                    android:textColor="@color/font_black"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/font_large" />
            </LinearLayout>

            <Button
                android:id="@+id/buy_coin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buy_coin_button_height"
                android:layout_marginLeft="@dimen/buy_coin_button_margin"
                android:layout_marginRight="@dimen/buy_coin_button_margin"
                android:layout_marginTop="@dimen/personal_item_panel_margin_top"
                android:background="@drawable/buy_coin_button_bg"
                android:text="确定"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_large" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/publish_tasks_item_title_padding_top_bottom"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:paddingTop="@dimen/publish_tasks_item_title_padding_top_bottom"
            android:text="购买明细"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_xx_small" />

        <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
            android:id="@+id/coin_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>