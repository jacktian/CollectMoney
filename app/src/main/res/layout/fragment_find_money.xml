<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_toolbar_height" />

    <LinearLayout
        android:id="@+id/find_operation_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/find_money_operation_layout_height"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/find_money_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/find_money_scan_icon" />

        <ImageButton
            android:id="@+id/find_money_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/find_money_pay_icon" />

        <ImageButton
            android:id="@+id/find_money_bag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/find_money_bag_icon" />

        <ImageButton
            android:id="@+id/find_money_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/find_money_recommend_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/route_plane_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_padding"
        android:paddingTop="@dimen/activity_vertical_padding">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/plane_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="步行"
                android:textColor="@android:color/white"
                android:textIsSelectable="true"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plane_type"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/route_plane_type"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_x_small" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/plane_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/white"
                android:textIsSelectable="true"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plane_duration"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/route_plane_duration"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_x_small" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/plane_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/white"
                android:textIsSelectable="true"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plane_distance"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/route_plane_distance"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_x_small" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.amap.api.maps.MapView
            android:id="@+id/find_money_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:translationZ="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="31dp"
            android:src="@mipmap/map_center_icon" />

        <TextView
            android:id="@+id/market_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/half_transparent"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingTop="@dimen/activity_vertical_padding"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_small"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/route_ope_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/start_navi_bg"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/start_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:src="@mipmap/start_navi" />
        </RelativeLayout>
    </FrameLayout>

