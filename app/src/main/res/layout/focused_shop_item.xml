<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/focused_shop_avater"
            android:layout_width="@dimen/focused_shop_avater_width"
            android:layout_height="@dimen/focused_shop_avater_width"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_holder_light" />

        <LinearLayout
            android:id="@+id/focused_shop_coin_counts_layout"
            android:layout_width="@dimen/focused_shop_coin_counts_width"
            android:layout_height="@dimen/focused_shop_coin_counts_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/focused_shop_coin_counts_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/focused_shop_daily_coins"
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_xx_small" />

            <TextView
                android:id="@+id/focused_shop_daily_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxEms="4"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/font_red"
                android:textSize="@dimen/font_x_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@id/focused_shop_coin_counts_layout"
            android:layout_toRightOf="@id/focused_shop_avater"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/focused_shop_name"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/focused_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/focused_shop_tel"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/focused_shop_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/focused_shop_pers"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/focused_shop_pers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_panel_top_border"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/focused_shop_address"
            android:textColor="@color/font_grey"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/focused_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_small" />
    </LinearLayout>
</LinearLayout>