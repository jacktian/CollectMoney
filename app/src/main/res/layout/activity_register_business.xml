<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_toolbar_height" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_toolbar_height"
        android:background="@color/light_yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/personal_item_panel_margin_top"
                android:background="@drawable/white_panel_top_bottom_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_padding"
                    android:paddingTop="@dimen/activity_vertical_padding">

                    <TextView
                        android:id="@+id/business_name_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/register_business_baza_name"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_medium" />

                    <EditText
                        android:id="@+id/business_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_weight="7"
                        android:background="@null"
                        android:hint="@string/register_business_name_hint"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="@dimen/font_medium" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_padding"
                    android:paddingTop="@dimen/activity_vertical_padding">

                    <TextView
                        android:id="@+id/business_pers_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/register_business_baza_pers"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_medium" />

                    <EditText
                        android:id="@+id/business_pers"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_weight="7"
                        android:background="@null"
                        android:hint="@string/register_business_pers_hint"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="@dimen/font_medium" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_padding"
                    android:paddingTop="@dimen/activity_vertical_padding">

                    <TextView
                        android:id="@+id/business_tel_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/register_business_baza_tel"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_medium" />

                    <EditText
                        android:id="@+id/business_tel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_weight="7"
                        android:background="@null"
                        android:hint="@string/register_business_tel_hint"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="@dimen/font_medium" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/personal_item_panel_margin_top"
                android:background="@drawable/white_panel_top_bottom_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_padding"
                    android:paddingTop="@dimen/activity_vertical_padding">

                    <TextView
                        android:id="@+id/business_address_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/register_business_baza_address"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_medium" />

                    <EditText
                        android:id="@+id/business_address"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_weight="7"
                        android:background="@null"
                        android:hint="@string/register_business_address_hint"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="@dimen/font_medium" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_padding"
                    android:paddingTop="@dimen/activity_vertical_padding">

                    <TextView
                        android:id="@+id/business_remark_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/register_business_remark"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_medium" />

                    <EditText
                        android:id="@+id/business_remark"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_weight="7"
                        android:background="@null"
                        android:hint="@string/register_business_remark_hint"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="@dimen/font_medium" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_padding"
                    android:paddingTop="@dimen/activity_vertical_padding">

                    <TextView
                        android:id="@+id/business_coor_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/register_business_coor"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_medium" />

                    <EditText
                        android:id="@+id/business_coor"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_weight="5"
                        android:background="@null"
                        android:hint="@string/register_business_coor_hint"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="@dimen/font_medium" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <Button
                            android:id="@+id/refresh_coor"
                            android:layout_width="@dimen/button_width"
                            android:layout_height="@dimen/button_height"
                            android:layout_gravity="right"
                            android:background="@drawable/orange_button_bg"
                            android:text="@string/refresh_coor"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_medium" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/personal_item_panel_margin_top"
                android:background="@drawable/orange_button_bg"
                android:gravity="center"
                android:text="@string/register_business_submit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>