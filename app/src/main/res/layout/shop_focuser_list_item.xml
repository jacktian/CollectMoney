<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/focuser_user_avater"
        android:layout_width="@dimen/friendship_list_item_avater_width"
        android:layout_height="@dimen/friendship_list_item_avater_width"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/focuser_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/focuser_user_avater"
        android:ellipsize="marquee"
        android:focusableInTouchMode="true"
        android:maxEms="6"
        android:singleLine="true"
        android:textColor="@color/font_grey"
        android:textIsSelectable="true"
        android:textSize="@dimen/font_small" />

    <!--<TextView-->
    <!--android:id="@+id/focuser_user_gender"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:textColor="@color/font_grey"-->
    <!--android:textSize="@dimen/font_small" />-->

    <ImageView
        android:id="@+id/focuser_user_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>