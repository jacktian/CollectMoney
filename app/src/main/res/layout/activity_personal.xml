                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/font_orange"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/font_medium" />

                </RelativeLayout>
            </LinearLayout>

