<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommend_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recommend_list_item_height">

    <ImageView
        android:id="@+id/recommend_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/recommend_pre_load" />

    <TextView
        android:id="@+id/recommend_item_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommend_list_item_des_height"
        android:layout_gravity="bottom"
        android:background="@mipmap/recommend_list_item_name_bg"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/recommend_list_item_des_padding"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_medium" />
</FrameLayout>