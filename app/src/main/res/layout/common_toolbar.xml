<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding">

            <com.yzdsmart.Collectmoney.views.BetterSpinner
                android:id="@+id/city_recommend_spinner"
                android:layout_width="@dimen/recommend_spinner_width"
                android:layout_height="@dimen/recommend_spinner_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/white_panel_radius_border"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/title_left_operation_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/activity_horizontal_padding">

                <ImageView
                    android:id="@+id/title_left_operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:src="@mipmap/personal_icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/title_left_operation_layout"
                android:text="左标题"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="中标题"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />

            <ImageView
                android:id="@+id/title_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/cat_logo" />

            <FrameLayout
                android:id="@+id/title_right_operation_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/activity_horizontal_padding">

                <ImageView
                    android:id="@+id/title_right_operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:src="@mipmap/qr_code_scanner_icon" />

                <ImageView
                    android:id="@+id/title_right_operation_to_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:src="@mipmap/qr_code_scanner_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bubble_count"
                    android:layout_width="@dimen/bubble_width"
                    android:layout_height="@dimen/bubble_width"
                    android:layout_gravity="right|top"
                    android:layout_marginTop="@dimen/right_ope_with_bubble_margin"
                    android:background="@mipmap/red_bubble_icon"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_xxsmall"
                    android:visibility="gone" />
            </FrameLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>