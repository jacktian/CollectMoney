<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_toolbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_toolbar_height"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_padding"
        android:paddingTop="@dimen/activity_vertical_padding">

        <RadioGroup
            android:id="@+id/hotel_info_toggle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hotel_toggle_height"
            android:background="@drawable/hotel_toggle_bg"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/toggle_hotel_info"
                android:layout_width="@dimen/hotel_toggle_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/hotel_toggle_button_info"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/hotel"
                android:textColor="@color/hotel_toggle_button"
                android:textSize="@dimen/font_medium" />

            <RadioButton
                android:id="@+id/toggle_hotel_detail"
                android:layout_width="@dimen/hotel_toggle_button_width"
                android:layout_height="match_parent"
                android:background="@drawable/hotel_toggle_button_detail"
                android:button="@null"
                android:gravity="center"
                android:text="@string/hotel_detail"
                android:textColor="@color/hotel_toggle_button"
                android:textSize="@dimen/font_medium" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hotel_detail_head_panel_height">

                <ImageView
                    android:id="@+id/hotel_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/hotel_image" />

                <RelativeLayout
                    android:id="@+id/hotel_base_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#a0575757"
                    android:paddingBottom="@dimen/activity_vertical_padding"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_padding"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/taxi_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/taxi_icon_white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/taxi_line"
                        android:layout_marginRight="@dimen/activity_horizontal_padding"
                        android:layout_toLeftOf="@id/taxi_line"
                        android:src="@mipmap/heart_icon_white" />

                    <TextView
                        android:id="@+id/hotel_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="地址：高新技术产业开发区西湖路2号"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_medium" />

                    <TextView
                        android:id="@+id/hotel_star_level_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/hotel_address"
                        android:text="星级 : "
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_medium" />

                    <LinearLayout
                        android:id="@+id/hotel_star_level_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/hotel_star_level_title"
                        android:layout_toRightOf="@id/hotel_star_level_title"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/hotel_star_level_white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/hotel_star_level_white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/hotel_star_level_white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/hotel_star_level_white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/hotel_star_level_white" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/hotel_star_level_title"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:text="常州香格里拉大酒店"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_medium" />
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/hotel_detail_introduction_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hotel_item_panel_margin_top"
                    android:background="@drawable/hotel_focus_panel_bg"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_padding"
                    android:paddingLeft="@dimen/user_detail_item_layout_padding"
                    android:paddingRight="@dimen/user_detail_item_layout_padding"
                    android:paddingTop="@dimen/activity_vertical_padding">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/focus_person_counts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/hotel_focus_detail_margin"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:text="40"
                            android:textColor="@color/orange"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_xlarge" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/focus_person_counts"
                            android:text="@string/hotel_focus_person_counts"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/font_medium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/daily_coin_counts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:text="2200"
                            android:textColor="@color/orange"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_xlarge" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/daily_coin_counts"
                            android:layout_centerHorizontal="true"
                            android:text="@string/hotel_daily_coins"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/font_medium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/visit_person_counts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/hotel_focus_detail_margin"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:text="25"
                            android:textColor="@color/orange"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/font_xlarge" />

                        <TextView
                            android:id="@+id/change_money_time_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/visit_person_counts"
                            android:text="@string/hotel_visit_person_counts"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/font_medium" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/hotel_detail_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hotel_item_panel_margin_top"
                    android:text="常州香格里拉大酒店是常州武进首家真正的豪华国际五星级酒店。毗邻“淹城”春秋乐园、天目湖和南山竹海等景区，是商务会奖、拓展旅游和休闲下榻的佳选。常州香格里拉将以完备的设施，产品和服务，尤其是在餐饮方面具独特的品质，真诚热情和关怀，为来常州的商务人士，本地企业家和各地旅游人士提供豪华至尊的礼遇和好的体验。"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_small" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/hotel_user_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hotel_item_panel_margin_top"
                    android:background="@drawable/hotel_focus_panel_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_vertical_padding"
                    android:drawableBottom="@mipmap/double_down_arrow"
                    android:text="@string/hotel_more_followers"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>