<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_padding">

    <com.yzdsmart.Dingdingwen.views.CustomNestRadioGroup
        android:id="@+id/pay_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_panel_top_bottom_border"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:paddingTop="@dimen/activity_vertical_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/buy_coin_wechat_icon"
                android:drawablePadding="@dimen/activity_horizontal_padding"
                android:text="@string/buy_coin_pay_wechat"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_medium" />

            <RadioButton
                android:id="@+id/wechat_pay_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/pay_type_radio" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_panel_top_border"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:paddingTop="@dimen/activity_vertical_padding"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/buy_coin_union_icon"
                android:drawablePadding="@dimen/activity_horizontal_padding"
                android:text="@string/buy_coin_pay_union"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_medium" />

            <RadioButton
                android:id="@+id/union_pay_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:drawableLeft="@drawable/pay_type_radio" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_panel_top_border"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:paddingTop="@dimen/activity_vertical_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/buy_coin_ali_icon"
                android:drawablePadding="@dimen/activity_horizontal_padding"
                android:text="@string/buy_coin_pay_ali"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_medium" />

            <RadioButton
                android:id="@+id/alipay_pay_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:drawableLeft="@drawable/pay_type_radio" />
        </RelativeLayout>
    </com.yzdsmart.Dingdingwen.views.CustomNestRadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/exchange_coupon_cancel"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium" />

        <Button
            android:id="@+id/dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/exchange_coupon_confirm"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

</LinearLayout>

