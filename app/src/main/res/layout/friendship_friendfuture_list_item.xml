<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/friendship_list_item_height"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_user_avater"
        android:layout_width="@dimen/friendship_list_item_avater_width"
        android:layout_height="@dimen/friendship_list_item_avater_width"
        android:layout_centerVertical="true"
        android:src="@mipmap/user_avater" />

    <TextView
        android:id="@+id/friend_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/friend_user_avater"
        android:text="韩梅梅"
        android:textColor="@color/grey"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/friend_user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="等级：V2"
        android:textColor="@color/grey"
        android:textSize="@dimen/font_medium" />

    <LinearLayout
        android:id="@+id/friend_user_diamond_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/diamond_pink" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/diamond_pink" />
    </LinearLayout>

    <Button
        android:id="@+id/friend_future_operation"
        android:layout_width="47dp"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/friend_future_button"
        android:text="邀请"
        android:textColor="@color/friend_future_button"
        android:textSize="@dimen/font_medium"
        android:visibility="gone" />

</RelativeLayout>