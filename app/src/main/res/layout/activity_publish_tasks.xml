<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_toolbar_height" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_toolbar_height"
        android:background="@color/light_yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_yellow"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/publish_tasks_item_title_padding_top_bottom"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:paddingTop="@dimen/publish_tasks_item_title_padding_top_bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publish_task_left_coins"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:id="@+id/left_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/publish_tasks_item_title_padding_top_bottom"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:paddingTop="@dimen/publish_tasks_item_title_padding_top_bottom"
                android:text="@string/publish_task_package_title"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <TextView
                    android:id="@+id/total_coin_counts_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="红包个数"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_medium" />

                <EditText
                    android:id="@+id/total_coin_counts"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/publish_task_package_count_hint"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="个"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/publish_tasks_item_margin_top"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <TextView
                    android:id="@+id/total_coin_amounts_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="总金额数"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_medium" />

                <EditText
                    android:id="@+id/total_coin_amounts"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/publish_task_package_amount_hint"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="个"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/publish_tasks_item_title_margin_top"
                android:paddingBottom="@dimen/publish_tasks_item_title_padding_top_bottom"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:paddingTop="@dimen/publish_tasks_item_title_padding_top_bottom"
                android:text="@string/publish_task_time_title"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <TextView
                    android:id="@+id/begin_time_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="开始时间"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_medium" />

                <EditText
                    android:id="@+id/begin_time"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight="7"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="right|center_vertical"
                    android:hint="@string/publish_task_time_hint"
                    android:imeOptions="actionNext"
                    android:inputType="datetime"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/publish_tasks_item_margin_top"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <TextView
                    android:id="@+id/end_time_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="结束时间"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_medium" />

                <EditText
                    android:id="@+id/end_time"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight="7"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="right|center_vertical"
                    android:hint="@string/publish_task_time_hint"
                    android:imeOptions="actionDone"
                    android:inputType="datetime"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>

            <Button
                android:id="@+id/publish_task"
                android:layout_width="@dimen/publish_tasks_button_width"
                android:layout_height="@dimen/publish_tasks_button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/publish_tasks_item_title_margin_top"
                android:background="@drawable/orange_button_width_disable"
                android:enabled="false"
                android:text="发布任务"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>