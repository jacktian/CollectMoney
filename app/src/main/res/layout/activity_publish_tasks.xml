<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_toolbar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_toolbar_height"
        android:background="@color/light_yellow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/personal_item_panel_margin_top"
            android:background="@drawable/white_panel_top_bottom_border"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <TextView
                    android:id="@+id/total_coin_counts_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="总金币数\t:"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />

                <EditText
                    android:id="@+id/total_coin_counts"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/total_coin_counts_title"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/light_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <TextView
                    android:id="@+id/min_coin_counts_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="最小金币数:"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />

                <EditText
                    android:id="@+id/min_coin_counts"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/min_coin_counts_title"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/light_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <TextView
                    android:id="@+id/max_coin_counts_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="最大金币数:"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />

                <EditText
                    android:id="@+id/max_coin_counts"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/max_coin_counts_title"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="9"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/light_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <TextView
                    android:id="@+id/begin_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="开始时间\t:"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />

                <EditText
                    android:id="@+id/begin_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/begin_time_title"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/light_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_padding"
                android:paddingTop="@dimen/activity_vertical_padding">

                <TextView
                    android:id="@+id/end_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="结束时间\t:"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />

                <EditText
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/end_time_title"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/publish_task"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/personal_item_panel_margin_top"
            android:background="@drawable/orange_button_bg"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/personal_item_panel_margin_top"
            android:background="@drawable/white_panel_top_bottom_border"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingTop="@dimen/activity_vertical_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/publish_task_coin_total_counts"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/publish_task_begin_end_time"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/publish_task_coin_left_counts"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/publish_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>