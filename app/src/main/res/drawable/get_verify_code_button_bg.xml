<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/grey" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/colorPrimary" />
            <padding
                android:bottom="@dimen/common_text_view_padding"
                android:left="@dimen/common_text_view_padding"
                android:right="@dimen/common_text_view_padding"
                android:top="@dimen/common_text_view_padding" />
        </shape>
    </item>
</layer-list>